  "definitions": {
    "User": {
      "type": "object",
      "required": ["username", "password", "firstname", "surname", "vip"],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "firstname": {
          "type": "string"
        },
        "surname": {
          "type": "string"
        },
        "vip": {
          "type": "boolean"
        },
        "refreshToken": {
          "type": "string"
        }
      }
    },
    "Post": {
      "type": "object",
      "required": ["author", "content", "contentType"],
      "properties": {
        "author": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "contentType": {
          "type": "string",
          "enum": ["text", "picture", "geolocalization"]
        },
        "createdAt": {
          "type": "date"
        },
        "lastEdited": {
          "type": "date"
        }
      }
    },
    "Message": {
      "type": "object",
      "required": [
        "author",
        "receiver",
        "receiverType",
        "content",
        "contentType"
      ],
      "properties": {
        "author": {
          "type": "string"
        },
        "receiver": {
          "type": "string"
        },
        "receiverType": {
          "type": "string",
          "enum": ["User", "Channel"]
        },
        "content": {
          "type": "string"
        },
        "contentType": {
          "type": "integer",
          "enum": ["text", "picture", "geolocalization"]
        },
        "createdAt": {
          "type": "date"
        },
        "lastEdited": {
          "type": "date"
        }
      }
    },
    "Channel": {
      "type": "object",
      "required": ["name", "channelAdmin", "adminType", "editorialChannel"],
      "properties": {
        "name": {
          "type": "string"
        },
        "channelAdmin": {
          "type": "string"
        },
        "adminType": {
          "type": "string",
          "enum": ["User", "Channel"]
        },
        "editorialChannel": {
          "type": "boolean"
        },
        "createdAt": {
          "type": "date"
        }
      }
    },
    "Moderator": {
      "type": "object",
      "required": ["username", "password", "firstname", "surname"],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "firstname": {
          "type": "string",
          "enum": ["User", "Channel"]
        },
        "surname": {
          "type": "boolean"
        }
      }
    }
  }
}
